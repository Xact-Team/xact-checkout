{
  "version": 2,
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "/dist/apps/api/main.js",
      "use": "@now/node"
    },
    {
      "src": "/dist/apps/web/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/apps/api/main.js"
    },
    { "handle": "filesystem" },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/apps/web/assets/$1"
    },
    {
      "src": "/(.*).(js|css|ico|webmanifest)",
      "dest": "/dist/apps/web/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/web/index.html"
    }
  ]
}
